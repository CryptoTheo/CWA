<ContestsAdmin>
    size_hint: 1, None
    height: '600dp'
    padding: '6dp'

    MDRelativeLayout:

        MDLabel:
            text: 'Create a Contest'
#            md_bg_color: 'blue'
            font_style: 'H4'
            halign: 'center'
            adaptive_height: True
            pos_hint: {'center_y': .95}

        MDTextField:
            id: event_name
            hint_text: 'Contest Name'
#                helper_text: "This will disappear when you click off"
            helper_text_mode: "on_focus"
            size_hint: None, None
            width: root.width/2.6
            pos_hint:{'x': .06, 'center_y': .85}
#                required: True

        MDTextField:
            id: location
            hint_text: 'Host Park'
#                helper_text: "This will disappear when you click off"
            helper_text_mode: "on_focus"
            size_hint: None, None
            width: root.width/2.6
            pos_hint:{'right': .94, 'center_y': .85}
#                required: True

        MDTextField:
            id: format
            hint_text: 'Format'
#                helper_text: "This will disappear when you click off"
            helper_text_mode: "on_focus"
            size_hint: None, None
            width: root.width/2.6
            pos_hint:{'x': .06, 'center_y': .35}
#                required: True

        MDTextFieldRect:
            id: description
            hint_text: 'Description'
            helper_text: "This will disappear when you click off"
            helper_text_mode: "on_focus"
            size_hint: None, None
            width: root.width/1.18
            height: '150dp'
            pos_hint:{'center_x': .5, 'center_y': .6}
            validator: 'email'

        MDRoundFlatIconButton:
            id: time
            text: "Start Time"
            icon: 'clock'
            width: root.width/2.6
            pos_hint:{'right': .94, 'center_y': .76}
            on_release: root.show_time_picker()
#                required: True

        MDRoundFlatIconButton:
            id: date
            text: "Event Date"
            icon: 'calendar'
#                size_hint: None, None
            width: root.width/2.6
            pos_hint: {'x': .06, 'center_y': .76}
            on_release: root.show_date_picker()

        MDTextField:
            id: image_link
            hint_text: 'Image URL:'
#                helper_text: "This will disappear when you click off"
            helper_text_mode: "on_focus"
            size_hint: None, None
            width: root.width/1.18
            pos_hint:{'center_x': .5, 'center_y': .45}
            on_text_validate: root.show_image()

        MDRoundFlatIconButton:
            text: 'Submit'
            icon: 'calendar-plus'
            pos_hint: {'right': .94, 'y': 0.04}
            on_release: root.add_contest()

